<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout_write"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/TextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="군도"
            android:textColor="@android:color/black"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ImageView_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ic_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#e3e3e3"/>

    <RatingBar
        android:id="@+id/RatingBar_movieScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="평점을 입력해 주세요"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/EditText_movieContents"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/linear_border_orange"
        android:gravity="start"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLength="100"
        android:textCursorDrawable="@android:color/holo_blue_dark"
        android:hint="100자 이내로 작성해주세요." />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button_save"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linear_border_purple"
            android:text="저 장"
            android:textSize="17sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Button_cancel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:background="@drawable/linear_border_purple"
            android:text="취 소"
            android:textStyle="bold" />

    </LinearLayout>






</LinearLayout>